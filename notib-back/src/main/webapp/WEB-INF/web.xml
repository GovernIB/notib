<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
		version="4.0">
	<display-name>NOTIB</display-name>

	<login-config>
		<auth-method>KEYCLOAK</auth-method>
		<realm-name>Govern de les Illes Balears</realm-name>
	</login-config>

	<security-role>
		<role-name>NOT_SUPER</role-name>
	</security-role>
	<security-role>
		<role-name>NOT_ADMIN</role-name>
	</security-role>
	<security-role>
		<role-name>NOT_CARPETA</role-name>
	</security-role>
	<security-role>
		<role-name>NOT_APL</role-name>
	</security-role>

	<security-constraint>
		<display-name>Unauthenticated areas</display-name>
		<web-resource-collection>
			<web-resource-name>Public areas</web-resource-name>
			<url-pattern>/ws/adviserWs</url-pattern>
			<url-pattern>/ws/notificacioWS</url-pattern>
			<url-pattern>/ws/notificacioV2WS</url-pattern>
			<url-pattern>/api/rest</url-pattern>
			<url-pattern>/api/rest/notificaCanvi</url-pattern>
			<url-pattern>/api/apidoc</url-pattern>
			<url-pattern>/api-docs</url-pattern>
			<url-pattern>/api-docs/*</url-pattern>
			<url-pattern>/js/*</url-pattern>
			<url-pattern>/css/*</url-pattern>
			<url-pattern>/img/*</url-pattern>
			<url-pattern>/webjars/*</url-pattern>
			<url-pattern>/images/*</url-pattern>
		</web-resource-collection>
	</security-constraint>

	<security-constraint>
		<display-name>All areas</display-name>
		<web-resource-collection>
			<web-resource-name>All areas</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>**</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>
